<div class="row">
  <div class="span16">
    <%= form_for [:admin, @user], :html => {:class => "form-stacked"} do |f| %>
      <div class="row">
        <div class="span-two-third">
          <%= render 'shared/error_messages', :object => f.object %>
        </div>
      </div>

      <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
      </p>

      <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
      </p>

      <p>
      <%= f.check_box :admin %>
      <%= f.label :admin, "Is an admin?" %>
      </p>

      <%= f.submit %>
    <% end %>
  </div>
</div>

