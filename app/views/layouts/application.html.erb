<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<div class="topbar">
			<div class="fill">
				<div class="container">
					<%= render 'layouts/header' %>
				</div>
			</div>
		</div>
		<div class ="container">
			<div class="hero-unit">
				<!--FLASH MESSAGE -->
				<% flash.each do |key, value| %>
					<div class ='flash' id= '<%=key %>'>
						<%= value %>
					</div>
				<% end %>

				<%= yield %>
			</div>

			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
